<h1>Modifier un pilote</h1>

<form action="/modifierPilotePost/{{pilnum}}" method="post" enctype="multipart/form-data">
    Prénom : <input required type="text" name="PILPRENOM" value="{{donneesPilote.PILPRENOM}}">
    Nom : <input required type="text" name="PILNOM" value="{{donneesPilote.PILNOM}}">
    Date de naissance : <input required type="date" name="PILDATENAIS" value="{{donneesPilote.PILDATENAIS}}">
    Nationalité : <select size="1" name="PAYNUM"/>

    {{#each pays}}
        <option value="{{this.PAYNUM}}"> {{this.PAYNOM}}
        </option>
    {{/each}}
    </select>

    ecurie : <select size="1" name="ECUNUM" />

    {{#each listeEcurie}}
        <option value="{{this.ECUNUM}}"> {{this.ECUNOM}}
        </option>
    {{/each}}

    </select>
    Points : <input required type="text" name="PILPOINTS" value="{{donneesPilote.PILPOINTS}}">
    Poids : <input required type="text" name="PILPOIDS" value="{{donneesPilote.PILPOIDS}}">
    Taille : <input required type="number" name="PILTAILLE" value="{{donneesPilote.PILTAILLE}}">

    Description :
    <textarea cols="40" rows="5" name="PILTEXTE">{{donneesPilote.PILTEXTE}}</textarea>

    Changer sa photo de présentation : (non obligatoire)
    <input type="file" name="PHOADRESSE" />

    <input type="submit" value="Modifier" />

</form>
