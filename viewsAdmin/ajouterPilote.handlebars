<h1>Ajouter un pilote</h1>

<form action="/ajouterPilotePost" method="post" enctype="multipart/form-data">
  Prénom : <input required type="text" name="PILPRENOM" value="Dorian">
  Nom : <input required type="text" name="PILNOM" value="Mare">
  Date de naissance : <input required type="date" name="PILDATENAIS" value="2000-09-25">
  Nationalité : <select size="1" name="PAYNUM" />

  {{#each pays}}
  <option value="{{this.PAYNUM}}"> {{this.PAYNOM}}
  </option>
  {{/each}}
  </select>

  ecurie : <select size="1" name="ECUNUM" />
  {{#each listeEcurie}}
  <option value="{{this.ECUNUM }}"> {{this.ECUNOM}}
  </option>
  {{/each}}

  </select>
  Points : <input required type="text" name="PILPOINTS" value="10">
  Poids : <input required type="text" name="PILPOIDS" value="85">
  Taille : <input required type="number" name="PILTAILLE" value="180">
  Description : <textarea cols="40" rows="5"
    name="PILTEXTE">Dorian MARE le pilote phare de l'écurie Major'Prom </textarea>
  <input required type="file" name="PHOADRESSE" />

  <span></span>
  <span></span>
  <input id="bouton" type="submit" value="AJOUTER" />

</form>
